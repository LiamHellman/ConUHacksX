{
  "manifest_version": 3,
  "name": "Factify - Bias & Fallacy Detector",
  "version": "1.0.0",
  "description": "Analyze any text for bias, logical fallacies, and get AI-powered rewrites",
  "permissions": ["activeTab", "storage", "contextMenus"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Factify"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
